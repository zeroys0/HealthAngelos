<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.a666g.A666gMainActivity">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y185"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y81"
            android:layout_marginBottom="@dimen/y44"
            android:src="@drawable/img_app_name"
            android:text="血压记录"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x45" />d

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y185">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x45"
                android:layout_marginTop="@dimen/y95"
                android:src="@drawable/arrow_left_black" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_unbind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/y100"
            android:layout_marginRight="@dimen/x30"
            android:text="解除绑定"
            android:textColor="#d9001b" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y14"
        android:background="#f5f5f5"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y230"
        android:background="@color/white"
       >
        <ImageView
            android:layout_width="@dimen/x234"
            android:layout_height="@dimen/y213"
            android:layout_marginLeft="@dimen/x60"
            android:src="@drawable/img_a666g_s"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x377"
            android:layout_marginTop="@dimen/y52"
            android:text="设备: "
            android:textColor="@color/text_black"
            android:textSize="@dimen/x40" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_model"
            android:text="臂式电子血压计 A666G"
            android:textSize="@dimen/x40"
            android:layout_marginTop="@dimen/y52"
            android:layout_marginLeft="@dimen/x513"
            android:textColor="#666666"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMEI: "
            android:textSize="@dimen/x40"
            android:layout_marginLeft="@dimen/x377"
            android:layout_marginTop="@dimen/y118"
            android:textColor="@color/text_black"/>

        <TextView
            android:id="@+id/tv_imei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x513"
            android:layout_marginTop="@dimen/y118"
            android:text="644589733599"
            android:textColor="#666666"
            android:textSize="@dimen/x40" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y14"
        android:background="#f5f5f5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="@dimen/x426"
        android:layout_height="wrap_content"
        android:background="@drawable/round_bp"
        android:layout_marginLeft="@dimen/x78"
        android:layout_marginTop="@dimen/y26">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x90"
            android:layout_marginTop="@dimen/y100"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="低压"
                android:textColor="@color/text_black"
                android:textSize="@dimen/x30" />

            <TextView
                android:id="@+id/tv_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_1"
                android:layout_gravity="center_horizontal"
                android:text="-"
                android:textColor="@color/text_black"
                android:textSize="@dimen/x66"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="mmHg"
                android:textColor="@color/text_black"
                android:textSize="@dimen/x36" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x80"
            android:layout_marginTop="@dimen/y100"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="高压"
                android:textColor="@color/text_black"
                android:textSize="@dimen/x30" />

            <TextView
                android:id="@+id/tv_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_1"
                android:layout_gravity="center_horizontal"
                android:text="-"
                android:textColor="@color/text_black"
                android:textSize="@dimen/x66"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="mmHg"
                android:textColor="@color/text_black"
                android:textSize="@dimen/x36" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_bp_state"
            android:layout_width="@dimen/x86"
            android:layout_height="@dimen/y37"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y324"
            android:background="@color/text_green"
            android:gravity="center"
            android:text="正常"
            android:textSize="@dimen/x29" />
    </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/x426"
            android:layout_height="wrap_content"
            android:background="@drawable/round_hr"
            android:layout_marginLeft="@dimen/x72"
            android:layout_marginTop="@dimen/y26">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/y100"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="心率"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/x30" />

                <TextView
                    android:id="@+id/tv_heart_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_1"
                    android:layout_gravity="center_horizontal"
                    android:text="-"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/x66"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="次/分钟"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/x36" />
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/x86"
                android:layout_height="@dimen/y37"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/y324"
                android:background="@color/text_green"
                android:gravity="center"
                android:text="正常"
                android:id="@+id/tv_heart_rate_state"
                android:textSize="@dimen/x29" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y55"
        android:layout_marginBottom="@dimen/y20"
        android:text="最近一次测量时间: "
        android:textColor="@color/text_gray"
        android:textSize="@dimen/x29" />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y14"
        android:background="#f5f5f5"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y135"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/a6g_chart"
                android:layout_marginLeft="@dimen/x69"
                android:layout_centerVertical="true"

                />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x147"
                android:text="七日内血压趋势图"
                android:textColor="@color/text_black"
                android:textSize="@dimen/x40"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/tv_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x35"
                android:layout_toRightOf="@+id/tv_name"
                android:background="@drawable/bg_blue_small_radius"
                android:drawableLeft="@drawable/a6g_change"
                android:drawablePadding="@dimen/x14"
                android:paddingLeft="@dimen/x14"
                android:paddingRight="@dimen/x14"
                android:text="切换"
                android:textSize="@dimen/x29" />

            <TextView
                android:id="@+id/tv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x63"
                android:drawableRight="@drawable/arrow_right_double_grey"
                android:drawablePadding="@dimen/x6"
                android:text="更多"
                android:textColor="@color/text_black" />
        </RelativeLayout>

    </LinearLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:layout_width="match_parent"
        android:layout_height="@dimen/y580"
        android:id="@+id/line_chart"
        android:layout_marginTop="@dimen/y20"
        android:layout_marginLeft="@dimen/x43"
        android:layout_marginRight="@dimen/x49"
        android:visibility="gone"
        />
    <com.github.mikephil.charting.charts.BarChart
        android:layout_width="match_parent"
        android:layout_height="@dimen/y580"
        android:id="@+id/bar_chart"
        android:layout_marginTop="@dimen/y20"
        android:layout_marginLeft="@dimen/x43"
        android:layout_marginRight="@dimen/x49"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/data_list"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/y40"/>


</LinearLayout>