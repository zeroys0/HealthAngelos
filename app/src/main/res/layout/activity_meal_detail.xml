<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".activity.UseDetailActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y185"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y80"
            android:layout_marginBottom="@dimen/y44"
            android:src="@drawable/img_app_name"
            android:text="套餐详情"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x45" />

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y185">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x45"
                android:layout_marginTop="@dimen/y95"
                android:src="@drawable/arrow_left_black" />
        </RelativeLayout>
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_top"
                android:layout_marginLeft="@dimen/x42"
                android:layout_marginTop="@dimen/y24"
                android:layout_marginRight="@dimen/x42"
                android:background="@drawable/bg_white_radius"
                android:elevation="@dimen/y20"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y115">

                    <View
                        android:layout_width="@dimen/x9"
                        android:layout_height="@dimen/y40"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x29"
                        android:background="@color/blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x52"
                        android:text="套餐名称"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/x40"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x78"
                        android:text="A套餐"
                        android:textColor="@color/text_grey" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y10"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/xu_line"

                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y115">

                    <View
                        android:layout_width="@dimen/x9"
                        android:layout_height="@dimen/y40"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x29"
                        android:background="@color/blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x52"
                        android:text="套餐价格"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/x40"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x78"
                        android:text="￥100.00"
                        android:textColor="@color/text_grey" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y10"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/xu_line"

                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y115">

                    <View
                        android:layout_width="@dimen/x9"
                        android:layout_height="@dimen/y40"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x29"
                        android:background="@color/blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x52"
                        android:text="使用期限"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/x40"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x78"
                        android:text="21/30天"

                        android:textColor="@color/blue" />

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x42"
                android:layout_marginTop="@dimen/y24"
                android:layout_marginRight="@dimen/x42"
                android:background="@drawable/bg_white_radius"
                android:elevation="@dimen/y20">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y115">

                    <View
                        android:layout_width="@dimen/x9"
                        android:layout_height="@dimen/y40"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x29"
                        android:background="@color/blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x52"
                        android:text="套餐简介"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/x40"

                        android:textStyle="bold" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x78"
                    android:layout_marginTop="@dimen/y132"
                    android:layout_marginRight="@dimen/x78"
                    android:layout_marginBottom="@dimen/y29"
                    android:text="我他喵的好像感冒了我他喵的好像感冒了我他喵的好像感冒了我他喵的好像感冒了我他喵的好了"
                    android:textColor="@color/text_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x42"
                android:layout_marginTop="@dimen/y24"
                android:layout_marginRight="@dimen/x42"
                android:background="@drawable/bg_white_radius"
                android:elevation="@dimen/y20">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y115">

                    <View
                        android:layout_width="@dimen/x9"
                        android:layout_height="@dimen/y40"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x29"
                        android:background="@color/blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x52"
                        android:text="套餐内容"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/x40"
                        android:textStyle="bold" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/item_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x55"
                    android:layout_marginTop="@dimen/y115"
                    android:layout_marginRight="@dimen/x37"
                    android:layout_marginBottom="@dimen/y66"
                    />
            </RelativeLayout>


            <Button
                android:id="@+id/btn_buy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y127"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/x63"
                android:layout_marginTop="@dimen/y86"
                android:layout_marginRight="@dimen/x63"
                android:background="@drawable/btn_confirm"
                android:text="购买" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
