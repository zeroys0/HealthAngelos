<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"
    tools:context=".activity.BioRadar.BindBioRadarActivity">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y215"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y110"
            android:layout_marginBottom="@dimen/y44"
            android:src="@drawable/img_app_name"
            android:text="绑定监控摄像头"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x45" />

        <ImageView
            android:id="@+id/img_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/y85"
            android:layout_marginRight="@dimen/x35"
            android:padding="@dimen/x30"
            android:src="@drawable/img_code"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/x40" />

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y185"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x45"
                android:layout_marginTop="@dimen/y95"
                android:src="@drawable/arrow_left_black" />
        </RelativeLayout>

    </RelativeLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll_view">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y115"
                android:background="@color/white"
                android:layout_marginTop="@dimen/y14">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_a666g_label"
                    android:layout_marginLeft="@dimen/x29"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="监控摄像头"
                    android:textColor="@color/text_black"
                    android:layout_marginLeft="@dimen/x26"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/x40"

                    />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img_ys7"
                android:layout_marginTop="@dimen/y12"
                android:id="@+id/img_head"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y46">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/red"
                    android:textSize="@dimen/x46"
                    android:layout_marginLeft="@dimen/x49"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x69"
                    android:text="设备序列号"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/x46" />

                <EditText
                    android:id="@+id/ed_serial"
                    android:layout_width="@dimen/x708"
                    android:layout_height="@dimen/y104"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x43"
                    android:background="@drawable/bg_white_radius_stroke"
                    android:hint="请输入九位数字或字母的序列号"
                    android:paddingLeft="@dimen/x60"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/text_gray"
                    android:textSize="@dimen/x37" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y46">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/red"
                    android:textSize="@dimen/x46"
                    android:layout_marginLeft="@dimen/x49"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x69"
                    android:text="设备验证码"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/x46" />

                <EditText
                    android:id="@+id/ed_code"
                    android:layout_width="@dimen/x708"
                    android:layout_height="@dimen/y104"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x43"
                    android:background="@drawable/bg_white_radius_stroke"
                    android:hint="请输入验证码"
                    android:paddingLeft="@dimen/x60"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/text_gray"
                    android:textSize="@dimen/x37" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y46">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/red"
                    android:textSize="@dimen/x46"
                    android:layout_marginLeft="@dimen/x49"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x69"
                    android:text="设备名称"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/x46" />

                <EditText
                    android:id="@+id/ed_name"
                    android:layout_width="@dimen/x708"
                    android:layout_height="@dimen/y104"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x43"
                    android:background="@drawable/bg_white_radius_stroke"
                    android:hint="请输入"
                    android:paddingLeft="@dimen/x60"
                    android:textColor="@color/text_black"
                    android:textColorHint="@color/text_gray"
                    android:textSize="@dimen/x37" />
            </RelativeLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/y127"
                android:id="@+id/btn_bind"
                android:layout_marginTop="@dimen/y115"
                android:background="@drawable/btn_blue_r63"
                android:text="确认绑定"
                android:textSize="@dimen/x52"
                android:layout_marginLeft="@dimen/x52"
                android:layout_marginRight="@dimen/x35"
                android:layout_marginBottom="@dimen/y130"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>