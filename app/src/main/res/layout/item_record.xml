<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/y11"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_time"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x53"
            android:textSize="@dimen/x36"
            android:textColor="@color/text_grey"
            android:text="2020-8-25"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已发送"
            android:textSize="@dimen/x36"
            android:layout_alignParentRight="true"
            android:layout_marginRight = "@dimen/x53"
            android:layout_centerVertical="true"
            android:textColor="#ed6c00"
            android:id="@+id/tv_state"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:layout_marginLeft="@dimen/x53"
        android:layout_marginRight="@dimen/x53"
        android:background="@color/bg"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_black"
        android:layout_marginLeft="@dimen/x53"
        android:layout_marginRight="@dimen/x53"
        android:layout_marginTop="@dimen/y35"
        android:textSize="@dimen/x45"
        android:text="吃饭"
        android:id="@+id/tv_content"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/y30"
        android:layout_marginLeft="@dimen/x53"
        android:id="@+id/ll_delete">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delete_grey"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"
            android:textColor="@color/text_grey"
            android:layout_marginLeft="@dimen/x20"
            />
    </LinearLayout>
</LinearLayout>
