<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/y40"
        android:src="@drawable/usual_bld_sugar"
        android:layout_gravity="center_vertical"
        android:id="@+id/img_bld_sugar"
        android:layout_marginLeft="@dimen/x20"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x37"
        android:layout_marginLeft="@dimen/x14"
        android:textColor="@color/text_black"
        android:text="7.2"
        android:id="@+id/tv_blood_sugar"
        android:layout_gravity="center_vertical"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x17"
        android:textColor="@color/text_gray"
        android:text="mmol/L"
        android:textSize="@dimen/x32"
        android:layout_gravity="center_vertical"

        />

    <TextView
        android:layout_width="@dimen/x80"
        android:layout_height="wrap_content"
        android:id="@+id/tv_dinner"
        android:gravity="center"
        android:textSize="@dimen/x37"
        android:text="餐前"
        android:textColor="@color/text_black"
        android:layout_marginLeft="@dimen/x190"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_time"
        android:textSize="@dimen/x37"
        android:textColor="@color/text_black"
        android:layout_marginLeft="@dimen/x240"
        android:text="15:51"
        />

</LinearLayout>