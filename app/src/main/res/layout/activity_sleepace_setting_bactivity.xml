<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".activity.sleepace.SleepaceSettingActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y185"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y80"
            android:layout_marginBottom="@dimen/y44"
            android:src="@drawable/img_app_name"
            android:text="睡眠设置"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x45" />

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y185">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x45"
                android:layout_marginTop="@dimen/y95"
                android:src="@drawable/arrow_left_black" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/y74"
            android:layout_marginRight="@dimen/x35"
            android:padding="@dimen/x10"
            android:text="保存"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x40" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x43"
        android:layout_marginTop="@dimen/y29"
        android:layout_marginRight="@dimen/x43"
        android:background="@drawable/shadow_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_alarm_clock"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y115">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x49"
                android:layout_marginTop="@dimen/y29"
                android:text="睡眠监测器安装环境"
                android:textColor="#535353"
                android:textSize="@dimen/x40"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/x58"
                android:layout_marginRight="@dimen/x20"
                android:background="@color/bg" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_drink_remind"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y115">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x49"
                android:layout_marginTop="@dimen/y29"
                android:text="床垫厚度"
                android:textColor="#535353"
                android:textSize="@dimen/x40"

                />

            <TextView
                android:id="@+id/tv_thickness"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x311"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请选择"
                android:textColor="@color/text_black"
                android:textColorHint="@color/text_grey"
                android:textSize="@dimen/x40" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/x58"
                android:layout_marginRight="@dimen/x20"
                android:background="@color/bg" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_sit_remind"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y115">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x49"
                android:layout_marginTop="@dimen/y29"
                android:text="床垫材质"
                android:textColor="#535353"
                android:textSize="@dimen/x40"

                />

            <TextView
                android:id="@+id/tv_material"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x311"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请选择"

                android:text=""
                android:textColor="@color/text_black"
                android:textColorHint="@color/text_grey"
                android:textSize="@dimen/x40" />


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>