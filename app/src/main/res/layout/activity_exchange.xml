<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".volunteer.ExchangeActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y194"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y80"
            android:layout_marginBottom="@dimen/y44"
            android:text="兑换服务"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x58" />

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y185">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x45"
                android:layout_marginTop="@dimen/y95"
                android:src="@drawable/back" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y80">

        <ImageView
            android:layout_width="@dimen/x58"
            android:layout_height="@dimen/y60"
            android:layout_gravity="center_vertical"
            android:src="@drawable/time_sand" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x35"
            android:text="时间银行剩余时间: "
            android:textColor="@color/text_black"
            android:textSize="@dimen/x46" />

        <TextView
            android:id="@+id/tv_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text=""
            android:textColor="@color/text_black"
            android:textSize="@dimen/x56"
            android:textStyle="bold"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="分钟"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x46"

            />

        <ImageView
            android:layout_width="@dimen/x58"
            android:layout_height="@dimen/y60"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x35"
            android:src="@drawable/time_sand" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x35"
        android:layout_marginRight="@dimen/x35"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y35"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x40"
                android:background="@drawable/arrow_right_yellow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:text="请填写兑换信息"
                android:textColor="@color/text_black"
                android:textSize="@dimen/x46"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y46">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x45"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x40"
                android:text="任务类型:"
                android:textColor="@color/text_black" />

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:maxLength="20"
                android:layout_marginLeft="@dimen/x35"
                android:text="个人任务"
                android:textColor="#999999"
                android:textSize="@dimen/x42"
                android:drawableRight="@drawable/arrow_down_triangle_grey"
                android:drawablePadding="@dimen/x10"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/x36"
                android:layout_marginRight="@dimen/x36"
                android:background="@color/bg" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y46"
            android:id="@+id/ll_num"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x45"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x40"
                android:text="所需人数:"
                android:textColor="@color/text_black" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:maxLength="20"
                android:layout_marginLeft="@dimen/x35"
                android:text="选择需要人数"
                android:textColor="#999999"
                android:textSize="@dimen/x42" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_down_triangle_grey"
                android:layout_gravity="center_vertical"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/x36"
                android:layout_marginRight="@dimen/x36"
                android:background="@color/bg" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/rl_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y46">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x45"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x40"
                android:text="开始时间:"
                android:textColor="@color/text_black" />

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="@dimen/x600"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/x35"
                android:paddingRight="@dimen/x30"
                android:text="请选择所需服务的开始时间"
                android:textColor="#999999"
                android:textSize="@dimen/x42" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/x36"
                android:layout_marginRight="@dimen/x36"
                android:background="@color/bg" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/rl_end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y46">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x45"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x40"
                android:text="结束时间:"
                android:textColor="@color/text_black" />

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="@dimen/x600"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/x35"
                android:paddingRight="@dimen/x30"
                android:text="请选择所需服务的结束时间"
                android:textColor="#999999"
                android:textSize="@dimen/x42" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/x36"
                android:layout_marginRight="@dimen/x36"
                android:background="@color/bg" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y46">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x45"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x40"
                android:text="服务地址:"
                android:textColor="@color/text_black" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="@dimen/x600"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/x35"
                android:paddingRight="@dimen/x30"
                android:text="请选择服务地址"
                android:textColor="#999999"
                android:textSize="@dimen/x42" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/x36"
                android:layout_marginRight="@dimen/x36"
                android:background="@color/bg" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y46">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x45"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x40"
                android:text="被服务人:"
                android:textColor="@color/text_black" />

            <EditText
                android:id="@+id/ed_name"
                android:layout_width="@dimen/x600"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/x35"
                android:paddingRight="@dimen/x30"
                android:text=""
                android:hint="请填写被服务人的姓名"
                android:textColorHint="#999999"
                android:textColor="#999999"
                android:textSize="@dimen/x42" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/x36"
                android:layout_marginRight="@dimen/x36"
                android:background="@color/bg" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y46">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x45"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x40"
                android:text="联系电话:"
                android:textColor="@color/text_black" />

            <EditText
                android:id="@+id/ed_phone"
                android:layout_width="@dimen/x600"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/x35"
                android:paddingRight="@dimen/x30"
                android:text=""
                android:hint="请填写能联系到您的电话号码"
                android:textColorHint="#999999"
                android:textColor="#999999"
                android:inputType="number"
                android:textSize="@dimen/x42" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/x36"
                android:layout_marginRight="@dimen/x36"
                android:background="@color/bg" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y46">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x45"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x40"
                android:text="任务标题:"
                android:textColor="@color/text_black" />

            <EditText
                android:id="@+id/ed_title"
                android:layout_width="@dimen/x600"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/x35"
                android:paddingRight="@dimen/x30"
                android:text=""
                android:hint="请填写您的任务标题"
                android:textColorHint="#999999"
                android:textColor="#999999"
                android:textSize="@dimen/x42" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/x36"
                android:layout_marginRight="@dimen/x36"
                android:background="@color/bg" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y46">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x45"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x40"
                android:text="服务内容:"
                android:textColor="@color/text_black" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y17">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x45"
                android:text="*"
                android:textColor="@color/red"
                android:visibility="invisible"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x40"
                android:background="@null"
                android:textSize="@dimen/x40"
                android:hint="请简述需要活动的内容"
                android:textColorHint="#999999"
                android:text=""
                android:id="@+id/ed_content"
                android:textColor="@color/text_black" />


        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您发布的任务正在审核中..."
        android:textSize="@dimen/x40"
        android:textColor="#666666"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_auditing"
        android:visibility="gone"
        android:layout_marginTop="@dimen/y100"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y233"
        android:layout_marginLeft="@dimen/x35"
        android:layout_marginRight="@dimen/x35"
        android:padding="@dimen/x30"
        android:text=""
        android:textSize="@dimen/x40"
        android:textColor="#666666"
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_reason"
        android:layout_marginTop="@dimen/y100"
        android:background="@drawable/red_stroke"
        android:visibility="gone"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/y68"
        android:background="@drawable/vol_btn"
        android:text="上传任务" />
</LinearLayout>