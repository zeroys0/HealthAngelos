<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".volunteer.ExchangeActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y194"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y80"
            android:layout_marginBottom="@dimen/y44"
            android:text="兑换服务"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x58" />

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y185">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x45"
                android:layout_marginTop="@dimen/y95"
                android:src="@drawable/back" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x56"
        android:layout_marginTop="@dimen/y37"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/x12"
            android:layout_height="@dimen/y44"
            android:layout_gravity="center_vertical"

            android:background="@color/blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/x15"
            android:text="请填写兑换信息"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x44" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y140">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x36"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x70"
                android:text="标题"
                android:textColor="@color/text_black" />

            <EditText
                android:id="@+id/ed_title"
                android:maxLength="20"
                android:layout_width="@dimen/x600"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="1dp"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/x30"
                android:text=""
                android:textColor="#999999"
                android:textSize="@dimen/x42" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/x36"
                android:layout_marginRight="@dimen/x36"
                android:background="@color/bg" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y140"
            android:id="@+id/rl_start_time">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x36"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x70"
                android:text="开始时间"
                android:textColor="@color/text_black" />

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="@dimen/x600"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="1dp"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/x30"
                android:text=""
                android:textColor="#999999"
                android:textSize="@dimen/x42" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/x36"
                android:layout_marginRight="@dimen/x36"
                android:background="@color/bg" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y140"
            android:id="@+id/rl_end_time">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x36"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x70"
                android:text="截止时间"
                android:textColor="@color/text_black" />

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="@dimen/x600"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="1dp"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/x30"
                android:text=""
                android:textColor="#999999"
                android:textSize="@dimen/x42" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/x36"
                android:layout_marginRight="@dimen/x36"
                android:background="@color/bg" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y140"
            android:id="@+id/rl_address">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x36"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x70"
                android:text="服务地址"
                android:textColor="@color/text_black" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="@dimen/x700"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="1dp"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/x30"
                android:text=""
                android:textColor="#999999"
                android:textSize="@dimen/x42" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/x36"
                android:layout_marginRight="@dimen/x36"
                android:background="@color/bg" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y140">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x36"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x70"
                android:text="联系电话"
                android:textColor="@color/text_black" />

            <EditText
                android:id="@+id/ed_phone"
                android:layout_width="@dimen/x600"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="1dp"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/x30"
                android:text=""
                android:textColor="#999999"
                android:textSize="@dimen/x42" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/x36"
                android:layout_marginRight="@dimen/x36"
                android:background="@color/bg" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y140"
            android:id="@+id/rl_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x36"
                android:text="*"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x70"
                android:text="服务内容"
                android:textColor="@color/text_black" />

            <TextView
                android:id="@+id/tv_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="@dimen/x600"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="1dp"
                android:background="@null"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/x30"
                android:text=""
                android:textColor="#999999"
                android:textSize="@dimen/x42" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/x36"
                android:layout_marginRight="@dimen/x36"
                android:background="@color/bg" />


        </RelativeLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/y68"
        android:background="@drawable/btn_confirm"
        android:id="@+id/btn_submit"
        android:text="提交认证" />
</LinearLayout>