<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/x35"
    android:layout_marginRight="@dimen/x35"
    android:layout_marginBottom="@dimen/y30"
    android:elevation="@dimen/y20"
    android:background="@drawable/bg_white_radius"
    android:layout_height="@dimen/y225">

    <TextView
        android:id="@+id/img_circle"
        android:layout_width="@dimen/x52"
        android:layout_height="@dimen/y52"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x55"
        android:background="@drawable/circle52" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x184"
        android:layout_marginTop="@dimen/y55"
        android:text="申请适老化改造"
        android:textColor="@color/text_black"
        android:textSize="@dimen/x46"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/x184"
        android:layout_marginBottom="@dimen/y43"
        android:text="嘉祥里"
        android:textColor="@color/text_gray"
        android:id="@+id/tv_content"
        />

    <TextView
        android:id="@+id/tv_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/y55"
        android:layout_marginRight="@dimen/x26"
        android:text="2021-12-5"
        android:textColor="@color/text_gray"

        />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/x26"
        android:layout_marginBottom="@dimen/y55"
        android:text="09:30"
        android:textColor="@color/text_gray"

        />
</RelativeLayout>
