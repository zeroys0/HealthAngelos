<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/y20"
    android:layout_marginLeft="@dimen/x100"
    android:layout_marginRight="@dimen/x130"
    android:background="@color/white">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/img"
        android:layout_centerVertical="true"
        android:src="@drawable/img_first"
        android:visibility="invisible"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_number"
        android:text="1"
        style="@style/text_size36"
        android:visibility="invisible"
        android:textColor="@color/text_grey"
        android:layout_marginLeft="@dimen/x10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name"
        android:text="张 军"
        style="@style/text_size36"
        android:layout_marginLeft="@dimen/x75"
        android:textColor="@color/text_grey"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_phone"
        android:text="152***69785"
        style="@style/text_size36"
        android:layout_marginLeft="@dimen/x350"
        android:textColor="@color/text_grey"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_count"
        android:text="33次"
        style="@style/text_size36"
        android:layout_alignParentRight="true"
        android:textColor="@color/text_grey"
        />
</RelativeLayout>
