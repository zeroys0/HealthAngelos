<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context=".activity.Ys7.Ys7MainActivity">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y185"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y81"
            android:layout_marginBottom="@dimen/y44"
            android:src="@drawable/img_app_name"
            android:text="摄像机设置"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x45" />

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y185">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x45"
                android:layout_marginTop="@dimen/y95"
                android:src="@drawable/arrow_left_black" />
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_track"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y130"
        android:background="@drawable/bg_white_big_radius"
        android:layout_marginTop="@dimen/y43"
        android:layout_marginLeft="@dimen/x43"
        android:layout_marginRight="@dimen/x43">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x60"
            android:layout_centerVertical="true"
            android:text="人形追踪"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x40"

            />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/cb_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            app:thumbTint="@color/white"
            app:track="@drawable/track" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="检测到有人活动时，摄像机自动转动镜头跟踪走位。同时显示人形识别框。"
        android:textSize="@dimen/x35"
        android:textColor="@color/text_grey"
        android:layout_marginLeft="@dimen/x92"
        android:layout_marginRight="@dimen/x92"
        android:layout_marginTop="@dimen/y14"/>

    <RelativeLayout
        android:id="@+id/rl_turn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y130"
        android:background="@drawable/bg_white_big_radius"
        android:layout_marginTop="@dimen/y43"
        android:layout_marginLeft="@dimen/x43"
        android:layout_marginRight="@dimen/x43">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x60"
            android:layout_centerVertical="true"
            android:text="画面翻转"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x40"

            />

    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击视频画面会翻转显示，适合倒装的场景。"
        android:textSize="@dimen/x35"
        android:textColor="@color/text_grey"
        android:layout_marginLeft="@dimen/x92"
        android:layout_marginRight="@dimen/x92"
        android:layout_marginTop="@dimen/y14"/>
    <RelativeLayout
        android:id="@+id/rl_private"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y130"
        android:background="@drawable/bg_white_big_radius"
        android:layout_marginTop="@dimen/y43"
        android:layout_marginLeft="@dimen/x43"
        android:layout_marginRight="@dimen/x43">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x60"
            android:text="隐私遮蔽"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x40"

            />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/cb_private"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x30"
            app:thumbTint="@color/white"
            app:track="@drawable/track" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启后摄像头自动遮蔽镜头。"
        android:textSize="@dimen/x35"
        android:textColor="@color/text_grey"
        android:layout_marginLeft="@dimen/x92"
        android:layout_marginRight="@dimen/x92"
        android:layout_marginTop="@dimen/y14"/>
    <RelativeLayout
        android:id="@+id/rl_remind"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y138"
        android:layout_marginLeft="@dimen/x43"
        android:layout_marginTop="@dimen/y29"
        android:layout_marginRight="@dimen/x43"
        android:background="@drawable/bg_white_big_radius">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x49"
            android:text="设备提醒方式"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x40" />

        <TextView
            android:id="@+id/tv_scene"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x150"
            android:text="静音"
            android:textColor="#333333"
            android:textSize="@dimen/x40" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x58"
            android:src="@drawable/arrow_right_black_small" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_wifi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y138"
        android:layout_marginLeft="@dimen/x43"
        android:layout_marginTop="@dimen/y29"
        android:layout_marginRight="@dimen/x43"
        android:background="@drawable/bg_white_big_radius">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x49"
            android:text="Wi-Fi配置(热点AP模式)"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x40" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x58"
            android:src="@drawable/arrow_right_black_small" />
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/y127"
        android:id="@+id/btn_unbind"
        android:background="@drawable/bg_white_big_radius"
        android:text="解除绑定"
        android:textColor="@color/red"
        android:textSize="@dimen/x52"
        android:layout_marginBottom="@dimen/y109"
        android:layout_marginLeft="@dimen/x52"
        android:layout_marginRight="@dimen/x52"
        />
</LinearLayout>