<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".activity.AddEquipmentActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y185"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y80"
            android:layout_marginBottom="@dimen/y44"
            android:src="@drawable/img_app_name"
            android:text="添加设备"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x45" />

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y185">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x45"
                android:layout_marginTop="@dimen/y95"
                android:src="@drawable/arrow_left_black" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="@dimen/x265"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x17"
            android:layout_marginTop="@dimen/y17"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/y30"
            android:background="@drawable/bg_white_radius">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y260"
                android:id="@+id/rl_chuandai"
                >

                <ImageView
                    android:layout_width="@dimen/x86"
                    android:layout_height="@dimen/y98"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/y40"
                    android:src="@drawable/img_chuandai" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/y29"
                    android:text="智能穿戴"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/x46"
                    android:id="@+id/tv_chuandai"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y260"
                android:id="@+id/rl_jiankong"
                >

                <ImageView
                    android:layout_width="@dimen/x86"
                    android:layout_height="@dimen/y98"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/y40"
                    android:src="@drawable/img_jiankong" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/y29"
                    android:text="智能监控"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/x46"
                    android:id="@+id/tv_jiankong"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y260"
                android:id="@+id/rl_jiance"
                >

                <ImageView
                    android:layout_width="@dimen/x86"
                    android:layout_height="@dimen/y98"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/y40"
                    android:src="@drawable/img_jiance" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/y29"
                    android:text="智能检测"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/x46"
                    android:id="@+id/tv_jiance"/>
            </RelativeLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/equipment_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/y30" />

