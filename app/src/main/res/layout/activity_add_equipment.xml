        <!--        android:layout_height="match_parent"-->
        <!--        android:orientation="horizontal">-->
        <!--        <androidx.recyclerview.widget.RecyclerView-->
        <!--            android:layout_width="@dimen/x370"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:id="@+id/type_list"-->
        <!--            android:background="@color/white"-->
        <!--            />-->
