<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y185"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y80"
            android:layout_marginBottom="@dimen/y44"
            android:src="@drawable/img_app_name"
            android:text="消息"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x45" />
    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y266"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/y7"
            android:background="@color/white"
            >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/rl_alarm"
                >
                <ImageView
                    android:layout_width="@dimen/x115"
                    android:layout_height="@dimen/y115"
                    android:src="@drawable/img_alarm_message"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/y27"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="健康异常"
                    android:textColor="@color/text_black"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/y43"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/rl_service">
                <ImageView
                    android:layout_width="@dimen/x115"
                    android:layout_height="@dimen/y115"
                    android:src="@drawable/img_service_message"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/y27"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务消息"
                    android:textColor="@color/text_black"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/y43"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/rl_safe">
                <ImageView
                    android:layout_width="@dimen/x115"

                    android:layout_height="@dimen/y115"
                    android:src="@drawable/img_safe_message"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/y27"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="安全消息"
                    android:textColor="@color/text_black"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/y43"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/rl_vip">
                <ImageView
                    android:layout_width="@dimen/x115"
                    android:layout_height="@dimen/y115"
                    android:src="@drawable/img_tips_message"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/y27"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会员消息"
                    android:textColor="@color/text_black"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/y43"
                    />
            </RelativeLayout>
        </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/chat_list"
        android:layout_marginTop="@dimen/y24"
        />
</LinearLayout>
