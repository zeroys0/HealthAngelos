<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y210"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x35"
        android:layout_marginTop="@dimen/y35"
        android:text="07:33"
        android:textColor="#5c5c5c"
        android:textSize="@dimen/x69" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x14"
        android:layout_marginTop="@dimen/y63"
        android:layout_toRightOf="@+id/tv_time"
        android:text="闹钟"
        android:textColor="#5c5c5c"
        android:textSize="@dimen/x37" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/x49"
        android:layout_marginBottom="@dimen/y35"
        android:text="不重复"
        android:textColor="#707070"
        android:textSize="@dimen/x37"
        android:id="@+id/tv_repeat"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/cb_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/y28"
        android:layout_marginRight="@dimen/x66"
        app:thumbTint="@color/white"
        app:track="@drawable/track" />

</RelativeLayout>