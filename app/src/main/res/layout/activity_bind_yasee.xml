<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5"

    tools:context=".activity.a666g.G777gActivity">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y185"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y81"
            android:layout_marginBottom="@dimen/y44"
            android:src="@drawable/img_app_name"
            android:text="设备绑定"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x45" />

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y185">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x45"
                android:layout_marginTop="@dimen/y95"
                android:src="@drawable/arrow_left_black" />
        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y115"
        android:background="@color/white"
        android:layout_marginTop="@dimen/y14">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_a666g_label"
            android:layout_marginLeft="@dimen/x29"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多参数检测仪 KE-2000"
            android:textColor="@color/text_black"
            android:layout_marginLeft="@dimen/x26"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/x40"

            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_device_default"
        android:layout_marginTop="@dimen/y12"
        android:id="@+id/img_head"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:layout_marginTop="@dimen/y38"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x69"
            android:text="*"
            android:textColor="@color/red"
            android:textSize="@dimen/x45"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x89"
            android:text="设备编号"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x35" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_white_radius_stroke"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x268"
            android:layout_marginRight="@dimen/x60"
            android:layout_centerVertical="true">


            <EditText
                android:id="@+id/ed_code"
                android:layout_width="@dimen/x650"
                android:layout_height="@dimen/y75"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入您的IMEI号"
                android:paddingLeft="@dimen/x40"
                android:textColor="@color/text_black"
                android:textColorHint="@color/text_grey"
                android:textSize="@dimen/x36" />

            <ImageView
                android:id="@+id/img_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x26"
                android:padding="@dimen/x10"
                android:src="@drawable/img_scan" />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/y127"
        android:layout_marginTop="@dimen/y630"
        android:background="@drawable/btn_blue_r63"
        android:layout_marginLeft="@dimen/x52"
        android:layout_marginRight="@dimen/x39"
        android:text="确认绑定"
        android:textSize="@dimen/x52"
        android:id="@+id/btn_bind"
        />
</LinearLayout>