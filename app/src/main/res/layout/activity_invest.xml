                android:layout_width="@dimen/x306"
                android:layout_height="@dimen/y102"
                android:background="@drawable/grey_bg_stroke"
                android:layout_marginLeft="@dimen/x25"
                android:textColor="@color/text_black"
                android:text="50元"
                android:gravity="center"
                android:textSize="@dimen/x40"
                android:id="@+id/tv_3"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/y33">
            <TextView
                android:layout_width="@dimen/x306"
                android:layout_height="@dimen/y102"
                android:background="@drawable/grey_bg_stroke"
                android:layout_marginLeft="@dimen/x57"
                android:textColor="@color/text_black"
                android:text="300元"
                android:gravity="center"
                android:textSize="@dimen/x40"
                android:id="@+id/tv_4"
                />
            <TextView
                android:layout_width="@dimen/x306"
                android:layout_height="@dimen/y102"
                android:background="@drawable/grey_bg_stroke"
                android:layout_marginLeft="@dimen/x25"
                android:textColor="@color/text_black"
                android:text="500元"
                android:gravity="center"
                android:textSize="@dimen/x40"
                android:id="@+id/tv_5"
                />
            <TextView
                android:layout_width="@dimen/x306"
                android:layout_height="@dimen/y102"
                android:background="@drawable/grey_bg_stroke"
                android:layout_marginLeft="@dimen/x25"
                android:textColor="@color/text_black"
                android:text="100元"
                android:gravity="center"
                android:textSize="@dimen/x40"
                android:id="@+id/tv_6"
                />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="@dimen/y20"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x45"
            android:layout_marginLeft="@dimen/x57"
            android:layout_marginTop="@dimen/y53"
            android:text="支付方式"
            android:textColor="@color/text_black"
            android:id="@+id/tv"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x186"
            android:id="@+id/ll_alipay"
            android:orientation="horizontal"
            android:layout_below="@+id/tv">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_choose"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x56"
                android:id="@+id/img_ali_check"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_alipay"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x68"

                />
            <TextView
