<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y717"
        android:id="@+id/rl_title"
        android:background="@drawable/step_title">

        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/y60"
            android:layout_marginRight="@dimen/x30"
            android:padding="@dimen/x40"
            android:src="@drawable/img_edit_white" />

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y185">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x45"
                android:layout_marginTop="@dimen/y95"
                android:src="@drawable/arrow_left_black" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/x389"
            android:layout_height="@dimen/y236"
            android:layout_marginTop="@dimen/y265"
            android:background="@drawable/bg_white_radius"
            android:alpha="0.44"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x141"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x46"
                android:text="消耗卡路里"
                android:textColor="#146c63"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/y26"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x46"
                android:text="13kcal"
                android:textColor="#146c63"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/y29"
                android:layout_alignParentBottom="true"
                android:textStyle="bold"
                />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
