<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/x1022"
        android:layout_height="@dimen/y784"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/dialog_login"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y43"
            android:text="*Wi-Fi名称"
            android:textStyle="bold"
            android:textColor="#5B5B5B"
            android:textSize="@dimen/x44" />


        <RelativeLayout
            android:layout_width="@dimen/x677"
            android:layout_height="@dimen/y92"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/grey_bg_stroke"
            android:layout_marginTop="@dimen/y29"
            android:id="@+id/rl_wifi">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_down_triangle_black"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x35"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x29"
                android:text="请选择要连接的Wi-Fi"
                android:textColor="@color/text_grey"
                android:id="@+id/tv_wifi"
                android:textSize="@dimen/x40" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y35"
            android:text="*Wi-Fi密码"
            android:textStyle="bold"
            android:textColor="#5B5B5B"
            android:textSize="@dimen/x44" />
        <RelativeLayout
            android:layout_width="@dimen/x677"
            android:layout_height="@dimen/y92"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/grey_bg_stroke"
            android:layout_marginTop="@dimen/y29">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x35"
                android:src="@drawable/arrow_down_triangle_black"

                />

            <EditText
                android:id="@+id/ed_wifi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x29"
                android:layout_marginRight="@dimen/x100"
                android:background="@null"
                android:hint="请填写Wi-Fi密码"
                android:textColor="@color/text_grey"
                android:textColorHint="@color/text_grey"
                android:textSize="@dimen/x40" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y78">
            <Button
                android:layout_width="@dimen/x366"
                android:layout_height="@dimen/y121"
                android:background="@drawable/btn_grey_bg_r29"
                android:layout_marginLeft="@dimen/x109"
                android:text="取  消"
                android:id="@+id/btn_cancel"/>
            <Button
                android:layout_width="@dimen/x366"
                android:layout_height="@dimen/y121"
                android:background="@drawable/btn_blue_r29"
                android:layout_marginLeft="@dimen/x109"
                android:text="确  定"
                android:id="@+id/btn_confirm"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
