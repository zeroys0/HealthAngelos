<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y121"
    android:layout_marginTop="@dimen/y30"
    android:background="@drawable/bg_white_radius"

    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_time"
        android:textSize="@dimen/x35"
        android:text="7月12日"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x43"
        android:textColor="#666666"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1秒"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x58"
        android:layout_centerVertical="true"
        android:textSize="@dimen/x35"
        android:textColor="#ff4343"
        android:id="@+id/tv_get_time"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name"
        android:layout_centerInParent="true"
        android:textSize="@dimen/x35"
        android:textColor="@color/text_black"
        android:text="续一秒活动续一秒活动续一秒活动续一秒活动续一秒活动"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxWidth="@dimen/x600"
        android:layout_marginBottom="@dimen/y25"
        android:layout_marginRight="@dimen/x60"
        />

</RelativeLayout>
