<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f4f3f5"
    tools:context=".activity.JWatchB.LocateRateSetActivity">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y185"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y81"
            android:layout_marginBottom="@dimen/y44"
            android:src="@drawable/img_app_name"
            android:text="定位频率"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x45" />

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y185">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x45"
                android:layout_marginTop="@dimen/y95"
                android:src="@drawable/arrow_left_black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x86"
                android:layout_marginTop="@dimen/y86"
                android:text="返回"
                android:textColor="#545454"
                android:textSize="@dimen/x46" />

        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/y37"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:background="@drawable/bg_white_radius">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xingling_locate_rate"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y55"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x55"
            android:layout_marginRight="@dimen/x55"
            android:text="可向当前设备设置一个定位频率值，设备会在这个设置频率上报位置"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x40"
            android:layout_marginTop="@dimen/y49"

            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y144"
            android:background="@drawable/bg_grey_radius"
            android:layout_marginTop="@dimen/y49"
            android:layout_marginLeft="@dimen/x37"
            android:layout_marginRight="@dimen/x37"
            android:id="@+id/rl_rate"
            android:layout_marginBottom="@dimen/y52">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="频率值:"
                android:textColor="@color/text_black"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x35"
                android:textSize="@dimen/x40"
                />

            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x37"
                android:alpha="0.4"
                android:text="点击选择"
                android:textColor="@color/text_black"
                android:textSize="@dimen/x46" />
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/y121"
        android:layout_marginLeft="@dimen/x130"
        android:layout_marginRight="@dimen/x130"
        android:layout_marginTop="@dimen/y109"
        android:background="@drawable/bg_blue_radius"
        android:text="保存"
        android:textSize="@dimen/x46"
        android:id="@+id/btn_save"/>
</LinearLayout>