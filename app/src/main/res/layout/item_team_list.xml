<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y282"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/y5"
        android:layout_marginBottom="@dimen/y5"
        >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/y112"
        >



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#999999"
        android:textSize="@dimen/x40"
        android:id="@+id/tv_a1"
        android:text="服务地点:"
        android:drawableLeft="@drawable/mission_address"
        android:drawablePadding="@dimen/x35"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:textColor="#999999"
        android:textSize="@dimen/x40"
        android:id="@+id/tv_address"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y40"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/mission_detail"
            android:textColor="#999999"
            android:textSize="@dimen/x40"
            android:drawablePadding="@dimen/x35"
            android:text="服务类型:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:textColor="#999999"
            android:textSize="@dimen/x40"
            android:id="@+id/tv_type"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y36"
        android:textColor="@color/text_black"
        android:textSize="@dimen/x40"
        android:drawableLeft="@drawable/arrow_right_yellow"
        android:drawablePadding="@dimen/x35"
        android:id="@+id/tv_title"
        android:text="队伍名称"/>
    <Button
        android:layout_width="@dimen/x219"
        android:layout_height="@dimen/y72"
        android:background="@drawable/orange_stroke"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="申请加入"
        android:textColor="#fa8f35"
        android:textSize="@dimen/x36"
        android:id="@+id/btn_add"
        />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y10"
            android:layout_alignParentBottom="true"
            android:background="@drawable/xu_line"
            />
    </RelativeLayout>
</LinearLayout>
