<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y252"
    android:layout_marginLeft="@dimen/x45"
    android:backgroundTint="@color/white"
    android:layout_marginTop="@dimen/y24"
    android:layout_marginRight="@dimen/x45">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/y5"
        android:layout_marginBottom="@dimen/y5"
        >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/x26"
        android:layout_marginTop="@dimen/y98"
        >



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="#999999"
        android:textSize="@dimen/x36"
        android:id="@+id/tv_a1"
        android:text="服务地点:"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x20"
        android:textColor="#999999"
        android:textSize="@dimen/x36"
        android:id="@+id/tv_address"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/x26"
        android:layout_marginTop="@dimen/y168"
        >



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="#999999"
            android:textSize="@dimen/x36"
            android:text="服务类型:"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x20"
            android:textColor="#999999"
            android:textSize="@dimen/x36"
            android:id="@+id/tv_type"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x26"
        android:layout_marginTop="@dimen/y36"
        android:textColor="@color/text_black"
        android:textSize="@dimen/x36"
        android:id="@+id/tv_title"
        android:text="队伍名称"/>
    <Button
        android:layout_width="@dimen/x191"
        android:layout_height="@dimen/y78"
        android:background="@drawable/btn_button_blue"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x30"
        android:text="加入"
        android:textColor="@color/white"
        android:textSize="@dimen/x36"
        android:id="@+id/btn_add"
        />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
