<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.ssk.BindSSKActivity">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y185"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y80"
            android:layout_marginBottom="@dimen/y44"
            android:src="@drawable/img_app_name"
            android:text="设备绑定"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x45" />

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y185">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x45"
                android:layout_marginTop="@dimen/y95"
                android:src="@drawable/arrow_left_black" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/y80"
            android:text="扫码设备"
            android:textColor="#2f9eff"
            android:layout_marginRight="@dimen/x43"
            android:textSize="@dimen/x40"
            android:id="@+id/tv_unbind"
            />


    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="智能床垫"
        android:textSize="@dimen/x46"
        android:textColor="@color/text_black"
        android:layout_marginLeft="@dimen/x78"
        android:layout_marginTop="@dimen/y52"

        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x43"
        android:layout_marginRight="@dimen/x43"
        android:background="@drawable/ssk_bg"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/y40"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ll_check"
            android:layout_below="@+id/tv_state"
            android:layout_marginTop="@dimen/y49"
            android:layout_marginLeft="@dimen/x40">

            <ImageView
                android:layout_width="@dimen/x52"
                android:layout_height="@dimen/y52"
                android:layout_gravity="center_vertical"
                android:src="@drawable/img_ps"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="操作步骤"
                android:textColor="@color/text_grey"
                android:layout_marginLeft="@dimen/x17"
                android:textSize="@dimen/x40"
                android:textStyle="bold"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. 把设备插到电源插座上"
            android:textSize="@dimen/x29"
            android:textColor="#666666"
            android:layout_marginTop="@dimen/y14"
            android:layout_marginLeft="@dimen/x35"
            android:id="@+id/tv_check_power"
            android:layout_below="@+id/ll_check"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. 打开手机蓝牙，搜索设备"
            android:textSize="@dimen/x29"
            android:textColor="#666666"
            android:layout_marginTop="@dimen/y10"
            android:layout_marginLeft="@dimen/x35"
            android:layout_marginRight="@dimen/x29"
            android:id="@+id/tv_check_sim"
            android:layout_below="@+id/tv_check_power"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. 连接蓝牙并配置Wi-Fi参数成功后即可使用设备"
            android:textSize="@dimen/x29"
            android:textColor="#666666"
            android:layout_marginTop="@dimen/y10"
            android:layout_marginLeft="@dimen/x35"
            android:layout_marginRight="@dimen/x29"
            android:id="@+id/tv_balance"
            android:layout_below="@+id/tv_check_sim"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. 绑定设备后，可查看该设备后续产生的报告"
            android:textSize="@dimen/x29"
            android:textColor="#666666"
            android:layout_marginTop="@dimen/y10"
            android:layout_marginLeft="@dimen/x35"
            android:layout_marginRight="@dimen/x29"
            android:id="@+id/tv_4"
            android:layout_below="@+id/tv_balance"
            />

        <LinearLayout
            android:layout_width="@dimen/x809"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_message"
            android:layout_below="@+id/tv_4"
            android:layout_marginTop="@dimen/y10"
            android:layout_marginLeft="@dimen/x35"
            android:layout_marginBottom="@dimen/y46">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*如果您找这样做,没有发现设备或操作失败,请重新插拔设备"
                android:textColor="#666666"
                android:id="@+id/tv_forth"
                android:textSize="@dimen/x29"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击刷新重新搜索.具体问题请点击"
                    android:textColor="#666666"
                    android:textSize="@dimen/x29"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备无法绑定"
                    android:textColor="@color/blue"
                    android:drawableLeft="@drawable/img_ps"
                    android:textSize="@dimen/x29"
                    android:id="@+id/tv_send_message"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y660"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/x43"
        android:layout_marginRight="@dimen/x43"
        android:layout_marginTop="@dimen/y37">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y130">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备编号"
                android:textSize="@dimen/x40"
                android:textColor="@color/text_grey"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x58"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="在线情况"
                android:textSize="@dimen/x40"
                android:textColor="@color/text_grey"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/x58"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="绑定情况"
                android:textSize="@dimen/x40"
                android:textColor="@color/text_grey"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x60"
                android:layout_marginLeft="@dimen/x58"/>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/device_list"
            />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/y127"
        android:background="@drawable/btn_blue_r29"
        android:layout_marginLeft="@dimen/x43"
        android:layout_marginRight="@dimen/x43"
        android:layout_marginTop="@dimen/y60"
        android:text="搜索设备"
        android:textSize="@dimen/x52"
        android:id="@+id/btn_search"
        />
</LinearLayout>