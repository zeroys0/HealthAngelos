<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.SkrFastCallActivity">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y185"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y80"
            android:layout_marginBottom="@dimen/y44"
            android:src="@drawable/img_app_name"
            android:text="快捷呼叫"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x45" />

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y185">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x45"
                android:layout_marginTop="@dimen/y95"
                android:src="@drawable/arrow_left_black" />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/y80"
            android:text="保存"
            android:textColor="@color/blue"
            android:layout_marginRight="@dimen/x43"
            android:textSize="@dimen/x40"
            android:id="@+id/tv_save"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"
        android:background="@color/bg"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y135"
        android:layout_marginTop="@dimen/y58"
        android:layout_marginLeft="@dimen/x49"
        android:layout_marginRight="@dimen/x46"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/shadow_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="按键1号码"
                android:textColor="#535353"
                android:textSize="@dimen/x40"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x42"

                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/ed_phone_1"
                android:gravity="center_vertical|end"
                android:layout_marginRight="@dimen/x72"
                android:textColor="#535353"
                android:background="@null"
                android:textSize="@dimen/x40"
                android:inputType="number"
                />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y135"
        android:layout_marginTop="@dimen/y29"
        android:layout_marginLeft="@dimen/x49"
        android:layout_marginRight="@dimen/x46"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/shadow_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="按键2号码"
                android:textColor="#535353"
                android:textSize="@dimen/x40"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x42"

                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/ed_phone_2"
                android:gravity="center_vertical|end"
                android:layout_marginRight="@dimen/x72"
                android:textColor="#535353"
                android:background="@null"
                android:textSize="@dimen/x40"
                android:inputType="number"
                />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y135"
        android:layout_marginTop="@dimen/y29"
        android:layout_marginLeft="@dimen/x49"
        android:layout_marginRight="@dimen/x46"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/shadow_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="按键3号码"
                android:textColor="#535353"
                android:textSize="@dimen/x40"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x42"

                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/ed_phone_3"
                android:gravity="center_vertical|end"
                android:layout_marginRight="@dimen/x72"
                android:textColor="#535353"
                android:background="@null"
                android:textSize="@dimen/x40"
                android:inputType="number"
                />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y135"
        android:layout_marginTop="@dimen/y29"
        android:layout_marginLeft="@dimen/x49"
        android:layout_marginRight="@dimen/x46"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/shadow_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="按键4号码"
                android:textColor="#535353"
                android:textSize="@dimen/x40"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x42"

                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/ed_phone_4"
                android:gravity="center_vertical|end"
                android:layout_marginRight="@dimen/x72"
                android:textColor="#535353"
                android:background="@null"
                android:textSize="@dimen/x40"
                android:inputType="number"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>