<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y194"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/y44"
            android:layout_marginTop="@dimen/y80"
            android:text="首页"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x58" />
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y185">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x45"
                android:layout_marginTop="@dimen/y95"
                android:src="@drawable/back" />
        </RelativeLayout>
    </RelativeLayout>
    <ImageView
        android:layout_width="@dimen/x980"
        android:layout_height="@dimen/y377"
        android:src="@drawable/volunteer_banner"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y21"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y44">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x141"
            android:id="@+id/rl_party">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_party"
                android:id="@+id/img_1"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x28"
                android:textColor="@color/text_black"
                android:text="团队任务"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_1"
                android:layout_marginTop="@dimen/y10"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/rl_personal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/personal_volunteer"
                android:id="@+id/img_2"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x28"
                android:textColor="@color/text_black"
                android:text="个人任务"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_2"
                android:layout_marginTop="@dimen/y10"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x141"
            android:id="@+id/rl_exchange">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_exchange"
                android:id="@+id/img_3"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x28"
                android:textColor="@color/text_black"
                android:text="兑换任务"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/img_3"
                android:layout_marginTop="@dimen/y10"
                />
        </RelativeLayout>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/notice_list"
        android:layout_marginLeft="@dimen/x56"
        android:layout_marginRight="@dimen/x56"
        android:layout_marginTop="@dimen/y40"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x56"
        android:layout_marginTop="@dimen/y37"
        android:orientation="horizontal"
        >
        <View
            android:layout_width="@dimen/x12"
            android:layout_height="@dimen/y44"
            android:background="@color/blue"

            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="最新发布"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x44"
            android:layout_marginLeft="@dimen/x15"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x56"
        android:layout_marginRight="@dimen/x56"
        android:id="@+id/action_list"/>
</LinearLayout>
