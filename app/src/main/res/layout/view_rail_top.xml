<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_black_radius_line"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_create_plan"
            android:layout_width="wrap_content"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="@dimen/iv_padding"
                android:src="@drawable/add_monitoring_plan" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:textColor="@color/text_black"
                android:text="新增监控计划"
                android:textSize="@dimen/x30" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/ll_create_scope"
            android:layout_width="wrap_content"
            android:layout_height="40dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="@dimen/iv_padding"
                android:src="@drawable/add_monitoring_range" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:textColor="@color/text_black"
                android:text="新增监控范围"
                android:textSize="@dimen/x30" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
