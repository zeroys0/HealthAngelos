<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y234"
    android:background="@color/white">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x45"
        android:textColor="@color/text_black"
        android:layout_marginLeft="@dimen/x57"
        android:layout_marginTop="@dimen/y48"
        android:id="@+id/tv_time"
        android:text="10:00-12:00"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x35"
        android:textColor="@color/text_grey"
        android:layout_marginLeft="@dimen/x59"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y51"
        android:text="120分钟"
        android:id="@+id/tv_interval"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginLeft="@dimen/x53"
        android:layout_marginRight="@dimen/x53"
        android:background="@color/bg"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_right_black"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x20"/>
</RelativeLayout>
