<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.ActionCommentActivity">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y185"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y80"
            android:layout_marginBottom="@dimen/y44"
            android:src="@drawable/img_app_name"
            android:text="发表评论"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x45" />

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y185">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x45"
                android:layout_marginTop="@dimen/y95"
                android:src="@drawable/arrow_left_black" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交评价"

            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/y92"
            android:textColor="@color/text_gray"
            android:id="@+id/tv_data"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y230"
        android:layout_marginLeft="@dimen/x35"
        android:layout_marginRight="@dimen/x35"
        android:layout_marginTop="@dimen/y12"
        android:background="@drawable/white_radius_half"
        android:orientation="vertical"
        android:elevation="@dimen/y20"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x35"
            android:layout_marginTop="@dimen/y40"
            android:text="养老机构名称"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/x52"
            android:id="@+id/tv_name"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="和平区金谷大厦1号"
            android:layout_marginTop="@dimen/y20"
            android:layout_marginLeft="@dimen/x35"
            android:textColor="@color/text_black"
            android:drawableLeft="@drawable/locate_icon"
            android:drawablePadding="@dimen/x10"
            android:id="@+id/tv_address"
            android:textSize="@dimen/x35"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y236"
        android:layout_marginLeft="@dimen/x35"
        android:layout_marginRight="@dimen/x35"
        android:layout_marginTop="@dimen/y12"
        android:background="@drawable/white_radius_half"
        android:orientation="vertical"
        android:elevation="@dimen/y20"
        >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="满意程度"
          android:textSize="@dimen/x40"
          android:textColor="@color/text_black"
          android:textStyle="bold"
          android:layout_marginLeft="@dimen/x29"
          android:layout_marginTop="@dimen/y23"

          />
        <net.leelink.healthangelos.util.RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:starHeight="@dimen/x81"
            app:starWidth="@dimen/x86"
            app:starEmptyRes="@drawable/star_location"
            app:starSelectedRes="@drawable/star_location_full"
            app:selectedNumber="5"
            android:id="@+id/rb_degree"
            android:layout_marginTop="@dimen/y20"
            android:layout_gravity="center_horizontal"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x35"
        android:layout_marginRight="@dimen/x35"
        android:layout_marginTop="@dimen/y12"
        android:background="@drawable/white_radius_half"
        android:orientation="vertical"
        android:elevation="@dimen/y20"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评价详情"
            android:textSize="@dimen/x40"
            android:textColor="@color/text_black"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/x29"
            android:layout_marginTop="@dimen/y23"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/y147"
            android:layout_marginTop="@dimen/y17"
            android:layout_marginLeft="@dimen/x29"
            android:layout_marginRight="@dimen/x29"
            android:hint="体验如何?发表您的感受,可以帮助更多的用户了解."
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/x35"
            android:gravity="left"
            android:background="@null"
            android:id="@+id/ed_content"
            android:textColor="@color/text_grey"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerview"
            android:layout_marginTop="@dimen/y75">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>