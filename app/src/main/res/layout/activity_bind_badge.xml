<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context=".activity.Badge.BindBadgeActivity">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y185"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y80"
            android:layout_marginBottom="@dimen/y44"
            android:src="@drawable/img_app_name"
            android:text="设备绑定"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x45" />

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y185">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x45"
                android:layout_marginTop="@dimen/y95"
                android:src="@drawable/arrow_left_black" />
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y115"
        android:background="@color/white"
        android:layout_marginTop="@dimen/y14"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_slaap_logal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x29"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x130"
            android:text="胸牌工卡"
            android:id="@+id/tv_name"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x46" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y12"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/img_device"
            android:layout_width="@dimen/x490"
            android:layout_height="@dimen/y490"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y12"
            android:layout_marginBottom="@dimen/y12"
            android:src="@drawable/img_badge" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y104"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/y35"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textSize="@dimen/x46"
            android:textColor="@color/red"
            android:layout_marginLeft="@dimen/x52"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMEI"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x46"
            android:layout_gravity="center_vertical"/>
        <RelativeLayout
            android:layout_width="@dimen/x708"
            android:layout_height="@dimen/y104"
            android:background="@drawable/bg_white_big_radius"
            android:layout_marginLeft="@dimen/x69">

            <EditText
                android:id="@+id/ed_imei"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x100"
                android:background="@null"
                android:text=""
                android:textColor="@color/text_grey" />

            <ImageView
                android:id="@+id/img_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/x30"
                android:src="@drawable/img_slaap_scan" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_confirm"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y50"
        android:text="确认绑定"
        android:id="@+id/btn_bind"
        android:layout_marginBottom="@dimen/y109"
        />

</LinearLayout>