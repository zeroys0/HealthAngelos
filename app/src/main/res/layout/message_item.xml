<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_radius"
    android:layout_marginTop="@dimen/y24"
    android:layout_marginLeft="@dimen/x42"
    android:layout_marginRight="@dimen/x42"

    >

    <ImageView
        android:id="@+id/img_type"
        android:layout_width="@dimen/x116"
        android:layout_height="@dimen/y116"
        android:src="@drawable/msg_safe"
        android:layout_marginLeft="@dimen/y38"
        android:layout_marginTop="@dimen/y44" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x207"
        android:layout_marginTop="@dimen/y42"
        android:text="120急救中心"
        android:textColor="@color/text_black"
        android:textSize="@dimen/x46" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/y53"
        android:layout_marginRight="@dimen/x27"
        android:text="2020-05-05 09:30"
        android:textColor="#878787"
        android:textSize="@dimen/x32" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginLeft="@dimen/x207"
        android:layout_marginTop="@dimen/y40"
        android:layout_marginBottom="@dimen/y62"
        android:maxWidth="@dimen/x740"
        android:text="您绑定的腕表拨打了急救中心电话，请及时联系，请确认腕表使用者健康安全！"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/x35" />
</RelativeLayout>