<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y200"
    android:layout_marginTop="@dimen/y30"
    android:background="@color/white">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x36"
        android:id="@+id/text_title"
        android:textColor="#666666"
        android:text="标题"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#999999"
        android:textSize="@dimen/x30"
        android:layout_below="@+id/text_title"
        android:maxLines="2"
        android:id="@+id/tv_content"
        android:layout_marginTop="@dimen/y20"
        android:text="内容"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="任务时间:"
        android:id="@+id/tv_t"
        android:textSize="@dimen/x27"
        android:textColor="#999999"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_t"
        android:id="@+id/tv_time"
        android:textSize="@dimen/x27"
        android:textColor="#999999"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y10"
        android:layout_marginLeft="@dimen/x69"
        />
    <TextView
        android:layout_width="@dimen/x176"
        android:layout_height="@dimen/y52"
        android:id="@+id/tv_label"
        android:background="@drawable/personal_mission"
        android:layout_alignParentRight="true"
        android:drawableLeft="@drawable/flag_personal"
        android:text=""
        android:textColor="@color/text_black"
        android:textSize="@dimen/x29"
        android:gravity="center_vertical"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="@color/bg"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>

