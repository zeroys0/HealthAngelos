<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/x98"
        android:layout_marginRight="@dimen/x95"
        android:layout_height="@dimen/y297"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/dialog_login"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y58"
            android:text="确认关机?"
            android:textColor="#4d4d4d"
            android:textSize="@dimen/x40" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y130"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/tv_cancel"
                android:gravity="center"
                android:textColor="#adabae"
                android:textSize="@dimen/x49"
                android:text="取消"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:id="@+id/tv_confirm"
                android:textColor="#008aff"
                android:textSize="@dimen/x49"
                android:text="确定"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
