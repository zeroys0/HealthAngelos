                android:layout_height="@dimen/y520"
                android:background="@drawable/bg_title_green">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/y37"
                    android:src="@drawable/bio_radar_normal"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/y256"
                    android:text="活动正常"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x52"
                    android:textStyle="bold" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/x72"
                android:layout_marginRight="@dimen/x66"
                android:layout_marginTop="-150px"
