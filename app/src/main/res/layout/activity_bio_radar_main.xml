                    android:id="@+id/line_chart"
                    android:layout_marginTop="@dimen/y20"
                    android:layout_marginLeft="@dimen/x43"
                    android:layout_marginRight="@dimen/x49"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y60"
                    android:layout_marginBottom="@dimen/y80"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/x46"
                        android:textColor="#696969"
                        android:layout_marginLeft="@dimen/x52"
                        android:text="前一天"
                        android:drawablePadding="@dimen/x20"
                        android:textStyle="bold"
                        android:id="@+id/tv_before"
                        android:drawableLeft="@drawable/img_radar_before"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/x55"
                        android:drawableLeft="@drawable/img_radar_after"
                        android:text="后一天"
                        android:drawablePadding="@dimen/x20"
                        android:textColor="#696969"
                        android:textSize="@dimen/x46"
                        android:id="@+id/tv_after"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>
