                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y16"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/x46"
                        android:textColor="#696969"
                        android:layout_marginLeft="@dimen/x52"
                        android:text="联系电话"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/x46"
                        android:textColor="@color/text_black"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/x55"
                        android:id="@+id/tv_phone"
                        android:text=""/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y16"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/x46"
                        android:textColor="#696969"
                        android:layout_marginLeft="@dimen/x52"
                        android:text="家庭住址"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/x46"
                        android:textColor="@color/text_black"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/x55"
                        android:id="@+id/tv_home_address"
                        android:text=""/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y121">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x35"
                        android:src="@drawable/img_radar_heart" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x120"
                        android:text="24小时活跃度图"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/x52" />

                    <TextView
