<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:id="@+id/img_pic"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_pic"
        android:text="图片配文字"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/text_black"
        android:textSize="@dimen/x35"
        android:id="@+id/tv_content"
        />
    <net.leelink.healthangelos.view.CircleImageView
        android:layout_width="@dimen/x37"
        android:layout_height="@dimen/y37"
        android:id="@+id/img_head"
        android:layout_below="@+id/tv_content"
        android:src="@drawable/img_default_head"
        android:layout_marginTop="@dimen/y20"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name"
        android:layout_toRightOf="@id/img_head"
        android:layout_below="@id/tv_content"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/y17"
        android:text="无名"
        android:textColor="@color/text_grey"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/img_good"
        android:layout_below="@+id/tv_content"
        android:layout_marginRight="@dimen/x20"
        android:text="19"
        android:textColor="@color/text_grey"
        android:layout_marginTop="@dimen/y17"
        android:textSize="@dimen/x29"
        android:id="@+id/tv_count"

        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_weidianzan_small"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x20"
        android:layout_below="@+id/tv_content"
        android:layout_marginTop="@dimen/y20"
        android:id="@+id/img_good"
        />
</RelativeLayout>
