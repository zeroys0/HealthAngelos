<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.WebActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y194"
        android:background="@color/blue">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y80"
            android:layout_marginBottom="@dimen/y44"
            android:text="任务详情"
            android:textColor="#ffffff"
            android:textSize="@dimen/x58" />

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y185">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x45"
                android:layout_marginTop="@dimen/y95"
                android:src="@drawable/back_white" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/y104"
            android:layout_marginRight="@dimen/x30"
            android:text="管理选项"
            android:textColor="@color/white"
            android:id="@+id/tv_mission_manage"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y200"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/y30"
            android:elevation="@dimen/y10"
            android:id="@+id/rl_bottom">

            <TextView
                android:id="@+id/tv_number"
                android:layout_width="@dimen/x400"
                android:layout_height="@dimen/y80"
                android:layout_centerVertical="true"
                android:layout_marginRight="-20dp"
                android:layout_toLeftOf="@+id/tv_confirm"
                android:background="@drawable/bg_grey_radius"
                android:gravity="center"
                android:text="确认开始"
                android:textColor="@color/text_black"
                android:textSize="@dimen/x40" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="@dimen/x400"
                android:layout_height="@dimen/y80"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-20dp"
                android:layout_toRightOf="@+id/tv_confirm"
                android:background="@drawable/bg_grey_radius"
                android:gravity="center"
                android:text="3:00:00"
                android:textColor="@color/text_black"
                android:textSize="@dimen/x40" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="@dimen/x200"
                android:layout_height="@dimen/y200"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/circle_bg_blue"
                android:elevation="@dimen/y10"
                android:gravity="center"
                android:text="接受"
                android:textColor="@color/white" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>