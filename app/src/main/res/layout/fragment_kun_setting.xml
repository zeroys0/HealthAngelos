<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="监测范围设置"
        android:textSize="@dimen/x40"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/x49"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x35"
        android:textColor="#888888"

        android:text="监测距离范围50cm-300cm；最近监测距离默认值50cm；最远监测距离默认值200cm"
        android:layout_marginLeft="@dimen/x49"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x14"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginTop="@dimen/y14"
        android:background="@drawable/bg_white_radius">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y115"
            android:orientation="horizontal"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最远监测距离（cm）"
                android:textSize="@dimen/x40"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x49"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/ed_far"
                android:background="@null"
                android:gravity="right|center"
                android:paddingRight="@dimen/x49"
                android:text="200"
                android:inputType="number"
                android:textColor="@color/black"
                android:imeOptions="actionDone"
                android:singleLine="true"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:layout_marginLeft="@dimen/x58"
            android:layout_marginRight="@dimen/x20"
            android:background="#707070"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y115"
            android:orientation="horizontal"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最近监测距离（cm）"
                android:textSize="@dimen/x40"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x49"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/ed_near"
                android:background="@null"
                android:gravity="right|center"
                android:paddingRight="@dimen/x49"
                android:text="50"
                android:inputType="number"
                android:textColor="@color/black"
                android:imeOptions="actionDone"
                android:singleLine="true"
                />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="睡眠报告设置"
        android:textSize="@dimen/x40"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/x49"
        android:layout_marginTop="@dimen/y43"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x35"
        android:textColor="#fc7d17"

        android:text="注意：睡眠报告生成时间应不早于睡眠监测截止时间。"
        android:layout_marginLeft="@dimen/x49"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x14"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginTop="@dimen/y14"
        android:background="@drawable/bg_white_radius">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y115"
            android:orientation="horizontal"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="睡眠报告开关"
                android:textSize="@dimen/x40"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x49"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/y1"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/report_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/x49"
                app:thumbTint="@color/white"
                app:track="@drawable/track" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:layout_marginLeft="@dimen/x58"

            android:layout_marginRight="@dimen/x20"
            android:background="#707070"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y115"
            android:orientation="horizontal"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="睡眠报告生成时间"
                android:textSize="@dimen/x40"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x49"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/tv_report_time"
                android:background="@null"
                android:gravity="right|center"
                android:paddingRight="@dimen/x49"
                android:text="50"
                android:textColor="@color/black"
                />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="睡眠监测设置"
        android:textSize="@dimen/x40"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/x49"
        android:layout_marginTop="@dimen/y43"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x35"
        android:textColor="#fc7d17"

        android:text="注意：睡眠监测时间段应长于实际睡眠时间段，起始时间间隔应大于3小时。"
        android:layout_marginLeft="@dimen/x49"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/x14"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginTop="@dimen/y14"
        android:background="@drawable/bg_white_radius">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y115"
            android:orientation="horizontal"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始时间"
                android:textSize="@dimen/x40"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x49"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/tv_start_time"
                android:background="@null"
                android:gravity="right|center"
                android:paddingRight="@dimen/x49"
                android:text="50"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:layout_marginLeft="@dimen/x58"
            android:layout_marginRight="@dimen/x20"
            android:background="#707070"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y115"
            android:orientation="horizontal"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="截止时间"
                android:textSize="@dimen/x40"
                android:textColor="@color/black"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x49"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/tv_end_time"
                android:background="@null"
                android:gravity="right|center"
                android:paddingRight="@dimen/x49"
                android:text="50"
                android:textColor="@color/black"
                />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="无人上报设置"
        android:textSize="@dimen/x40"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/x49"
        android:layout_marginTop="@dimen/y43"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y115"
        android:orientation="horizontal"
        android:background="@drawable/bg_white_radius"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无人时数据是否上报"
            android:textSize="@dimen/x40"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x49"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/y1"
            android:layout_weight="1"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/update_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x49"
            app:thumbTint="@color/white"
            app:track="@drawable/track" />
    </LinearLayout>

    </LinearLayout>