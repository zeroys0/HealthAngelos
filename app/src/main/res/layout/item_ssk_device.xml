<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y127"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:maxWidth="@dimen/x400"
        android:autoSizeTextType="uniform"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x32"
        android:text=""
        android:textColor="@color/text_grey"
        android:textSize="@dimen/x40" />

    <TextView
        android:id="@+id/tv_ol_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:text="在线"
        android:textColor="@color/text_green" />

    <TextView
        android:id="@+id/tv_state"
        android:layout_width="@dimen/x161"
        android:layout_height="@dimen/y81"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x55"
        android:background="@drawable/bg_blue_stroke_r6"
        android:gravity="center"
        android:text="绑定"
        android:textColor="@color/blue"

        />
</RelativeLayout>
