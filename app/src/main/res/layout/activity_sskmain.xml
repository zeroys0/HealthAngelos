<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.ssk.SSKMainActivity">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y185"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y80"
            android:layout_marginBottom="@dimen/y44"
            android:src="@drawable/img_app_name"
            android:text="设备"
            android:textColor="@color/text_black"
            android:textSize="@dimen/x45" />

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y185">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x45"
                android:layout_marginTop="@dimen/y95"
                android:src="@drawable/arrow_left_black" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_unbind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/y80"
            android:layout_marginRight="@dimen/x43"
            android:text="解除绑定"
            android:textColor="@color/red"
            android:textSize="@dimen/x40" />


    </RelativeLayout>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/y611"
       android:layout_marginTop="@dimen/y23"
       android:layout_marginLeft="@dimen/x43"
       android:layout_marginRight="@dimen/x43"
       android:background="@drawable/shadow_bg">

       <ImageView
           android:id="@+id/img_head"
           android:layout_width="@dimen/x230"
           android:layout_height="@dimen/y230"
           android:layout_marginLeft="@dimen/x29"
           android:layout_marginTop="@dimen/y20"
           android:src="@drawable/img_device_default" />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/tv_name"
            android:layout_toRightOf="@id/img_head"
           android:layout_marginLeft="@dimen/x63"
           android:layout_marginTop="@dimen/y40"
           android:text="设备: 智能床垫"
           android:textColor="@color/text_black"
            android:textSize="@dimen/x35"

           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/tv_number"

           android:layout_toRightOf="@id/img_head"
           android:layout_marginLeft="@dimen/x63"
           android:layout_marginTop="@dimen/y109"
           android:text="编号: ssk37529"
           android:textColor="@color/text_black"
           android:textSize="@dimen/x35"

           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/tv_s"

           android:layout_toRightOf="@id/img_head"
           android:layout_marginLeft="@dimen/x63"
           android:layout_marginTop="@dimen/y179"
           android:text="状态: "
           android:textColor="@color/text_black"
           android:textSize="@dimen/x35"

           />
       <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/tv_state"

       android:layout_toRightOf="@id/tv_s"
       android:layout_marginTop="@dimen/y179"
       android:text="设备在线 "
       android:textColor="#ff7f22"
       android:textSize="@dimen/x35"

       />

       <RelativeLayout
           android:layout_width="@dimen/x300"
           android:layout_height="@dimen/y300"
           android:layout_alignParentBottom="true"
           android:layout_marginLeft="@dimen/x29"
           android:layout_marginBottom="@dimen/y26"
           android:background="@drawable/img_heart_ssk">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="@dimen/y32"
               android:text="心 率"
               android:textColor="@color/text_grey"
               android:textSize="@dimen/x40" />

           <TextView
               android:id="@+id/tv_heart"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerInParent="true"
               android:text="--"
               android:textColor="@color/text_grey" />

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
               android:layout_centerHorizontal="true"
               android:layout_marginBottom="@dimen/y37"
               android:text="次/分钟"
               android:textColor="@color/text_grey"

               />


       </RelativeLayout>
       <RelativeLayout
           android:layout_width="@dimen/x300"
           android:layout_height="@dimen/y300"
           android:layout_alignParentBottom="true"
           android:layout_marginBottom="@dimen/y26"
           android:layout_centerHorizontal="true"
           android:background="@drawable/img_breath_ssk">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="呼 吸"
               android:layout_marginTop="@dimen/y32"
               android:textSize="@dimen/x40"
               android:layout_centerHorizontal="true"
               android:textColor="@color/text_grey"
               />

           <TextView
               android:id="@+id/tv_breath"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerInParent="true"
               android:text="--"
               android:textColor="@color/text_grey" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="次/分钟"
               android:textColor="@color/text_grey"
               android:layout_centerHorizontal="true"
               android:layout_alignParentBottom="true"
               android:layout_marginBottom="@dimen/y37"

               />


       </RelativeLayout>
       <RelativeLayout
           android:layout_width="@dimen/x300"
           android:layout_height="@dimen/y300"
           android:layout_alignParentBottom="true"
           android:layout_marginBottom="@dimen/y26"
           android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x29"
           android:background="@drawable/img_time_ssk">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="时 间"
               android:layout_marginTop="@dimen/y32"
               android:textSize="@dimen/x40"
               android:layout_centerHorizontal="true"
               android:textColor="@color/text_grey"
               />

           <TextView
               android:id="@+id/tv_time"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerInParent="true"
               android:text="-:-"
               android:textColor="@color/text_grey" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="小时: 分钟"
               android:textColor="@color/text_grey"
               android:layout_centerHorizontal="true"
               android:layout_alignParentBottom="true"
               android:layout_marginBottom="@dimen/y37"

               />


       </RelativeLayout>

   </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x43"
        android:layout_marginRight="@dimen/x43"
        android:layout_marginTop="@dimen/y29">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y222"
            android:id="@+id/ll_wifi"
            android:orientation="vertical"
            android:background="@drawable/shadow_bg">
            <ImageView
                android:layout_width="@dimen/x127"
                android:layout_height="@dimen/y127"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y20"
                android:src="@drawable/ssk_wifi"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配置WiFi"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y6"
                android:textColor="@color/blue"
                android:textSize="@dimen/x35"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y222"
            android:id="@+id/ll_rgb"
            android:layout_marginLeft="@dimen/x14"
            android:orientation="vertical"
            android:background="@drawable/shadow_bg">
            <ImageView
                android:layout_width="@dimen/x127"
                android:layout_height="@dimen/y127"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y20"
                android:src="@drawable/ssk_rgb"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配置呼吸灯"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y6"
                android:textColor="@color/blue"
                android:textSize="@dimen/x35"

                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x43"
        android:layout_marginRight="@dimen/x43"
        android:layout_marginTop="@dimen/y23">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y222"
            android:id="@+id/ll_sleep_chart"
            android:orientation="vertical"
            android:background="@drawable/shadow_bg">
            <ImageView
                android:layout_width="@dimen/x127"
                android:layout_height="@dimen/y127"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y20"
                android:src="@drawable/ssk_sleep_chart"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看睡眠趋势"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y6"
                android:textColor="@color/blue"
                android:textSize="@dimen/x35"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/y222"
            android:id="@+id/ll_health_report"
            android:layout_marginLeft="@dimen/x14"
            android:orientation="vertical"
            android:background="@drawable/shadow_bg">
            <ImageView
                android:layout_width="@dimen/x127"
                android:layout_height="@dimen/y127"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y20"
                android:src="@drawable/ssk_health_report"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看健康报告"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y6"
                android:textColor="@color/blue"
                android:textSize="@dimen/x35"

                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x43"
        android:layout_marginRight="@dimen/x43"
        android:layout_marginTop="@dimen/y26"
        android:layout_marginBottom="@dimen/y43"
        android:background="@drawable/shadow_bg"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y130"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <View
                android:layout_width="@dimen/x12"
                android:layout_height="@dimen/y12"
                android:background="@color/text_black"
                android:layout_gravity="center_vertical"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预警中心"
                android:textColor="@color/text_black"
                android:textSize="@dimen/x40"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x17"
                />
            <View
                android:layout_width="@dimen/x12"
                android:layout_height="@dimen/y12"
                android:background="@color/text_black"
                android:layout_marginLeft="@dimen/x17"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/alarm_list"/>

    </LinearLayout>
</LinearLayout>