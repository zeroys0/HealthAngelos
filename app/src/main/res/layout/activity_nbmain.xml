<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    tools:context=".activity.NBdevice.NBMainActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y185"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/y80"
            android:layout_marginBottom="@dimen/y44"
            android:src="@drawable/img_app_name"
            android:text=""
            android:textColor="@color/text_black"
            android:textSize="@dimen/x45" />

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y185">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x45"
                android:layout_marginTop="@dimen/y95"
                android:src="@drawable/arrow_left_black" />
        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y14"
        android:background="@color/white"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/x181"
            android:layout_height="@dimen/y169"
            android:layout_marginLeft="@dimen/x60"
            android:layout_marginTop="@dimen/y29"
            android:src="@drawable/img_device_default" />

        <LinearLayout
            android:layout_width="@dimen/x173"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x64"
            android:layout_marginTop="@dimen/y29"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/y20"
                android:text="设备:"
                android:textColor="@color/text_black"
                android:textSize="@dimen/x35" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/y10"
                android:text="IMEI:"
                android:textColor="@color/text_black"
                android:textSize="@dimen/x35" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/y10"
                android:text="设备型号:"
                android:textColor="@color/text_black"
                android:textSize="@dimen/x35" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x44"
            android:layout_marginTop="@dimen/y29"
            android:layout_marginBottom="@dimen/y29"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_device_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y20"
                    android:text=""
                    android:textColor="@color/text_grey_2"
                    android:textSize="@dimen/x35" />

                <net.leelink.healthangelos.view.BatteryView
                    android:id="@+id/battery"
                    android:layout_width="@dimen/x66"
                    android:layout_height="@dimen/y32"
                    android:layout_marginLeft="@dimen/x32"
                    android:layout_marginTop="@dimen/y26"
                    android:layout_toRightOf="@+id/tv_device_name" />

                <ImageView
                    android:id="@+id/img_connect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x32"
                    android:layout_marginTop="@dimen/y23"
                    android:src="@drawable/badge_online" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_imei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/y10"
                android:text="864858984"
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/x35" />

            <TextView
                android:id="@+id/tv_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/y10"
                android:text=""
                android:textColor="@color/text_grey_2"
                android:textSize="@dimen/x35" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y14"
        android:background="@color/white"

        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y32"
            android:background="@color/white"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/x12"
                android:layout_height="@dimen/y46"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x63"
                android:background="@drawable/bg_blue_radius" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x95"
                android:text="最后报警记录："
                android:textColor="@color/text_black"
                android:textSize="@dimen/x37" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x72"
                android:text="2023-10-09 12:38:36"
                android:id="@+id/tv_newest_time"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/x37" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y26"
            android:background="@color/white"
            android:layout_marginBottom="@dimen/y29"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x95"
                android:text="跌倒监测："
                android:textColor="@color/text_grey"
                android:id="@+id/tv_value"
                android:textSize="@dimen/x37" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/y14"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y115"
            android:layout_marginTop="@dimen/y14"
            android:background="@color/white"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/x12"
                android:layout_height="@dimen/y46"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x63"
                android:background="@drawable/bg_blue_radius" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x20"
                android:text="报警历史记录"
                android:textColor="@color/text_black"
                android:textSize="@dimen/x37" />

            <TextView
                android:id="@+id/tv_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="@dimen/x72"
                android:text="设置 >>"
                android:textColor="@color/blue"
                android:visibility="gone" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/alarm_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>