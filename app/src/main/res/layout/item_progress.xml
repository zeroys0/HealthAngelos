<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y150"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x35"
        android:textColor="@color/text_black"
        android:layout_marginLeft="@dimen/x55"
        android:layout_marginTop="@dimen/y20"
        android:text="05-27"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x28"
        android:textColor="@color/text_black"
        android:layout_marginLeft="@dimen/x64"
        android:layout_marginTop="@dimen/y70"
        android:text="06:33"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/x193">
    <View
        android:layout_width="@dimen/x1"
        android:layout_height="@dimen/y60"
        android:layout_above="@+id/img_icon"
        android:layout_gravity="center_horizontal"
        android:background="@color/bg"
        android:id="@+id/img_up"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_right"
        android:id="@+id/img_icon"
        />
        <View
            android:layout_width="@dimen/x1"
            android:layout_height="@dimen/y60"
            android:layout_above="@+id/img_icon"
            android:layout_gravity="center_horizontal"
            android:background="@color/bg"
            android:id="@+id/img_down"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="轻度失能"
        android:textColor="@color/text_black"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x253"

        />
</RelativeLayout>
