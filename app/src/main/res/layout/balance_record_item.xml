<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y190"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x57"
        android:layout_marginTop="@dimen/y39"
        android:includeFontPadding="false"
        android:text="消费"
        android:textColor="@color/text_black"
        android:textSize="@dimen/x45" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/x57"
        android:layout_marginBottom="@dimen/y37"
        android:includeFontPadding="false"
        android:text="2020-08-20 17:05:25"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/x39" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x36"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x57"
        android:layout_centerVertical="true"
        android:text="-52"
        android:textColor="@color/red"
        android:id="@+id/tv_cost"
        />
</RelativeLayout>
